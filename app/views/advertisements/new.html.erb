<h1>New Advertisement</h1>

<div class="row">
  <%= form_for @advertisement do |a| %>
    <div class="form-group">
      <%= a.label :title %>
      <%= a.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
    </div>
    <div class="form-group">
      <%= a.label :body %>
      <%= a.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
    </div>
    <div class="form-group">
      <%= a.label :price %>
      <%= a.number_field :price, class: 'form-control', placeholder: 99 %>
    </div
    <div class="form-group">
      <%= a.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
