<h1><%= @SponsoredPost.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @SponsoredPost.body %></p>
  </div>
  <div class="col-md-4">
    <% link_to "Edit", edit_topic_sponsored_post_path(@SponsoredPost.topic, @SponsoredPost), class: 'btn btn-success' %>
    <%= link_to "Delete Sponsored Post", [@SponsoredPost.topic, @SponsoredPost], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete?' } %>
  </div>
</div>
